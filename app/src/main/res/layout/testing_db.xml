<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<EditText
    android:id="@+id/idEdtItemName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="Enter Name Of Item" />
<EditText
    android:id="@+id/idEdtBarcode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="Enter Barcode" />

<EditText
    android:id="@+id/idEdtCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="Enter Category Of Item (Dairy, Produce, Frozen, Etc.)" />

<EditText
    android:id="@+id/idEdtQuantity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="Enter Quantity Of Items" />

<EditText
    android:id="@+id/idExpiryDate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:hint="Enter Expiry Date (YYYY-MM-DD)" />

<Button
    android:id="@+id/idBtnAddItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Add Item"
    android:textAllCaps="false" />

<Button
    android:id="@+id/idBtnReadItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Read Items"
    android:textAllCaps="false" />

</LinearLayout>